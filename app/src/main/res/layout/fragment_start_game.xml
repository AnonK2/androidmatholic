<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/startGameFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFE082"
                tools:context="com.utilfreedom.brainmath.StartGameFragment">

    <LinearLayout
        android:id="@+id/indicatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/indicator"
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_weight="1"
            android:background="#F44336"/>

    </LinearLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/indicatorLayout"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/answer1Btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="65sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/answer2Btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="65sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/numberWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indicatorLayout"
        android:layout_centerInParent="true"
        android:layout_marginTop="81dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/number1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="0.45"
                android:elevation="0dp"
                android:textAlignment="textEnd"
                android:textSize="65sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/operationSymbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="-6.3dp"
                android:layout_weight="0.1"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="45sp"/>

            <TextView
                android:id="@+id/number2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="0.45"
                android:fontFamily="sans-serif"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="65sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/equals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight=".4"
                android:textAlignment="textEnd"
                android:textSize="65sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/number3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight=".6"
                android:paddingStart="15dp"
                android:textAlignment="viewStart"
                android:textSize="65sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/gameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indicatorLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:textSize="30sp"/>

</RelativeLayout>
